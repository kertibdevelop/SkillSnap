@using SkillSnap.Client.Services
@using SkillSnap.Shared.Models

@inject ProjectService ProjectService

<h4 class="mb-3">My Projects</h4>

@if (projects == null || !projects.Any())
{
    <p class="text-muted">No projects available yet.</p>
}
else
{
    <div class="row">
        @foreach (var project in projects)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="@(project.ImageUrl ?? "https://via.placeholder.com/400x200?text=No+Image")" 
                         class="card-img-top" 
                         alt="@project.Title" 
                         style="height: 180px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@(project.Description ?? "No description available")</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {

    

    private List<Project> projects;
    protected override async Task OnInitializedAsync()
    {
        projects = await ProjectService.GetProjectsAsync();
    }
}