@using SkillSnap.Shared.Models

<h4 class="mb-3">Skills</h4>

@if (Skills == null || !Skills.Any())
{
    <p class="text-muted">No skills listed yet.</p>
}
else
{
    <div class="d-flex flex-wrap gap-2">
        @foreach (var skill in Skills)
        {
            <span class="badge bg-primary rounded-pill px-3 py-2 fs-6">
                @skill.Name 
                @if (!string.IsNullOrEmpty(skill.Level))
                {
                    <span class="badge bg-light text-dark ms-1">@skill.Level</span>
                }
            </span>
        }
    </div>
}

@code {
    private List<Skill> Skills { get; set; } = new()
    {
        new Skill { Id = 1, Name = "Blazor", Level = "Expert" },
        new Skill { Id = 2, Name = ".NET", Level = "Advanced" },
        new Skill { Id = 3, Name = "C#", Level = "Expert" },
        new Skill { Id = 4, Name = "Entity Framework Core", Level = "Advanced" },
        new Skill { Id = 5, Name = "REST APIs", Level = "Intermediate" },
        new Skill { Id = 6, Name = "Bootstrap", Level = "Advanced" }
    };
}